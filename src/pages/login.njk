{% extends "layouts/page.njk" %}

{% set root_class = "register" %}

{% block title %}
Connexion
{% endblock %}

{% block content %}
    <div class="max-w-7xl mt-8 px-3 mx-auto">
        <div>
            <img src="/images/logos/faclab-numixs.svg" class="w-20" alt="">
        <h1 class="text-6xl title-font text-green-numixs">Connexion</h1>
        </div>
        <form action="/connexion" method="post">
            <div class="flex flex-col gap-3">
                <div class="flex flex-col">
                    <label for="username">Identifiant</label>
                    <input type="text" class="text-black">
                </div>
                <div class="flex flex-col">
                    <label for="password">Mot de passe</label>
                    <input type="password" name="" id="password" class="text-black">
                </div>
                <div>
                    <button type="submit" class="text-green-numixs inline-flex w-fit title-font text-2xl gap-2.5 py-3.5 font-bold hocus:text-white items-center">
                    Se connecter
                    {% include "includes/icons/next-arrow.svg" %}
                    </button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
