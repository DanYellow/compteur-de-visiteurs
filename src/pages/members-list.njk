{% extends "layouts/page.njk" %}

{% block title %}
Liste des membres
{% endblock %}
{% block scripts %}
    <script type="module" src="/src/assets/scripts/members-poll.ts" defer></script>
{% endblock %}

{% block content %}
    <div data-notifications-container class="fixed left-2 top-2 z-50 empty:h-0"></div>
    <header class="text-center mb-10 max-w-3xl mx-auto px-3">
        <h1 class="text-5xl text-black-numixs font-bold title-font mb-2.5">
   Liste des membres du FacLab<sup>®</sup> numixs
</h1>
    </header>
    <hr class="bg-gray-input-border-numixs">
    <div class="mt-8 px-3 mb-5">
        <table class="w-full bg-white border-collapse">
            <caption class="mb-2">
                <div class="flex justify-between px-4">
                    <p class="text-start text-xl">
                    Nombre de membres : <span data-nb-members>{{ members_list|length }}</span>
                    </p>
                    <a href="/membres/telecharger" download class="inline-block bg-green-700 px-2.5 py-1 rounded-xl text-white hocus:bg-green-900">Télécharger (.csv)</a>
                </div>
            </caption>
            <thead>
                <tr class="bg-gray-200">
                    {% for business in list_business_sector %}
                        <td class="{{ 'border-l border-gray-500' if loop.index0 == 0 else '' }} {{ 'border-r border-gray-500' if loop.last else '' }} bg-gray-300 font-bold px-4 py-3 text-left border-solid">{{ business.name }}</td>
                    {% endfor %}
                    <td class="font-bold px-4 py-3 text-left border-solid">Date de passage</td>
                </tr>
            </thead>
            <tbody>
                {% for member in members_list %}
                    <tr class="even:bg-green-numixs/50 group hover:bg-slate-200" data-member-row>
                        {% for business in list_business_sector %}
                            <td class="{{ 'border-l border-gray-500' if loop.index0 == 0 else '' }} {{ 'border-r border-gray-500' if loop.last else '' }} group-hover:bg-slate-200 bg-gray-100 group-even:bg-green-numixs/50 px-4 py-3 text-left" data-label="{{ business.name }}" data-row-key="{{ business.value }}">{{ member[business.value] }}</td>
                        {% endfor %}
                        <td class="px-4 py-3 text-left" data-label="Date d'inscription" data-row-key="Date d'inscription">
                            <time datetime="{{ member['Date d\'inscription'] }}">
                                {{ member["Date d'inscription"] }}
                            </time>
                        </td>
                    </tr>
                {% else %}
                    <tr class="">
                        <td colspan="15" class="px-4 py-3 text-center">Pas de membres pour le moment</td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr class="bg-gray-200">
                    {% for business in list_business_sector %}
                        <td class="{{ 'border-l border-gray-500' if loop.index0 == 0 else '' }} {{ 'border-r border-gray-500' if loop.last else '' }} bg-gray-300 font-bold px-4 py-3 text-left border-solid">{{ business.name }}</td>
                    {% endfor %}
                    <td class="font-bold px-4 py-3 text-left border-solid border-slate-200">Date d'inscription</td>
                </tr>
            </tfoot>
        </table>
    </div>

    <template data-template-id="new-member-notification">
        <div class="flex items-center w-full max-w-xs p-4 mb-4 text-gray-500 bg-white rounded-lg shadow-sm notification" data-notification role="alert">
            <div class="inline-flex items-center justify-center shrink-0 w-8 h-8 text-green-500 bg-green-100 rounded-lg">
                <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z"/>
                </svg>
                <span class="sr-only">Check icon</span>
            </div>
            <p class="ms-3 text-sm font-normal pr-1.5" data-notification-text>Item moved successfully.</p>
            <button type="button" class="ms-auto -mx-1.5 -my-1.5 bg-white text-gray-400 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-gray-100 inline-flex items-center justify-center h-8 w-8" data-dismiss-notification-btn aria-label="Close">
                <span class="sr-only">Close</span>
                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                </svg>
            </button>
        </div>
    </template>

{% endblock %}
