{% extends "layouts/page.njk" %}

{% block title %}
Liste des visiteurs le {{ current_date|date("EEEE dd LLLL yyyy") }}
{% endblock %}

{% import "includes/macros.njk" as macros %}
{% block scripts %}
{% if NODE_ENV == "development" %}
    <script type="module" src="/src/assets/scripts/details-visit-dialog.ts" defer></script>
{% else %}
    <script type="module" src="/{{ manifest['src/assets/scripts/details-visit-dialog.ts'].file }}" defer></script>
{% endif %}
{% endblock %}

{% set active_menu_item = "visiteurs" %}
{% set place_selected = place.slug or "tous" %}
{% set date_format = "dd/LL/yyyy à HH:mm" %}
{% set root_class = "admin" %}
{% block content %}
    <div data-notifications-container class="fixed left-2 top-2 z-50 empty:h-0"></div>
    <div data-place='{{ place | json }}' class="mt-8 pr-[max(env(safe-area-inset-right),_theme(space.3))] pl-[max(env(safe-area-inset-left),_theme(space.3))] grid grid-cols-1 xl:grid-cols-[260px_minmax(0,_1fr)] gap-6">
        {% include "includes/admin-nav.njk" %}
        <div class="bg-slate-50 rounded-md py-5 px-6 md:py-10 md:px-13">
            <header class="flex flex-row justify-between md:items-center mb-10 -mt-1.5">
                <div class="text-black-numixs flex flex-col items-start">
                    <h1 class="text-black-numixs title-font font-bold text-6xl">Visites uniques</h1>
                    {% include "includes/dropdown-places.njk" %}
                </div>
                {% set split_button_main_action %}
                <a href="/telecharger?jour={{ current_date|date("yyyy-MM-dd") }}&lieu={{ place_selected }}" download class="px-3.5 py-2.5 rounded-tl-xl rounded-bl-xl text-white">
                        Télécharger les données du {{ current_date|date("dd/MM/yyyy") }} (.csv)
                    </a>
                {% endset %}

                {% set split_button_sub_action_1 %}
                <a href="/telecharger?semaine={{ current_date|date("yyyy-MM-dd") }}&lieu={{ place_selected }}" download class="w-full align-center inline-flex whitespace-nowrap flex-row gap-2 px-3.5 py-2.5 rounded-xl text-black hocus:bg-slate-300">
                    {% include "includes/icons/download-fill-icon.svg" %}
                        Télécharger toutes les données de la semaine (.csv)
                    </a>
                {% endset %}

                {% set split_button_sub_action_2 %}
                <a href="/telecharger?mois={{ current_date|date("yyyy-MM") }}&lieu={{ place_selected }}" download class="w-full align-center inline-flex whitespace-nowrap flex-row gap-2 px-3.5 py-2.5 rounded-xl text-black hocus:bg-slate-300">
                    {% include "includes/icons/download-fill-icon.svg" %}
                        Télécharger toutes les données de {{ current_date|date("MMMM yyyy") }} (.csv)
                    </a>
                {% endset %}

                {% set split_button_sub_action_3 %}
                <a href="/telecharger?annee={{ current_date|date("yyyy") }}&lieu={{ place_selected }}" download class="w-full align-center inline-flex whitespace-nowrap flex-row gap-2 px-3.5 py-2.5 rounded-xl text-black hocus:bg-slate-300">
                    {% include "includes/icons/download-fill-icon.svg" %}
                        Télécharger toutes les données de l'année {{ current_date|date("yyyy") }} (.csv)
                    </a>
                {% endset %}

                {% set list_sub_actions = [split_button_sub_action_1, split_button_sub_action_2, split_button_sub_action_3] %}

                <div class="hidden sm:block">
                    {{ macros.split_button(
                        split_button_main_action,
                        list_sub_actions
                    ) }}
                </div>
                <div class="block sm:hidden">
                    <button type="button" class="text-black-numixs hocus:text-green-numixs" commandfor="download-links" command="toggle-popover">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-8">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 12a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0ZM12.75 12a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0ZM18.75 12a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z"/>
                        </svg>
                    </button>
                </div>
            </header>
            <div class="text-black-numixs">
                <header class="flex gap-4 mb-6 justify-between sm:justify-normal">
                    {% include "includes/date-nav.njk" %}
                </header>
                {% include "includes/calendar.njk" %}
                <header class="flex mb-3 gap-3">
                    <div class="flex flex-col w-full md:w-auto bg-green-numixs p-3 pr-5 rounded-md text-black-numixs">
                        {% if is_day_closed == false %}
                            <p class="text-2xl title-font">Nombre de visites uniques</p>
                        {% endif %}
                        <p class="text-4xl title-font">{{ "Fermé" if is_day_closed else visitors_list|length }}</p>
                        <p>{{ current_date|date("EEEE dd LLLL yyyy") }}</p>
                    </div>
                    <div class="bg-black-numixs p-3 rounded-md text-white-numixs hidden flex-1 md:grid md:grid-cols-3 lg:grid-cols-4 gap-1.5">
                        <p class="col-span-full text-xl">Détails des visites par type de visiteur</p>
                        {% for business in list_business_sector %}
                            <div class="flex flex-col flex-auto">
                                <p class="h-8">{{ business.name }}</p>
                                <p class="text-xl place-content-end -mt-4">{{ visitors_summary[business.value] }}</p>
                            </div>
                        {% endfor %}
                    </div>
                </header>
                {% if place.nom %}
                <div class="p-3 rounded-md border-solid border-black-numixs border mb-3">
                    <h2 class="title-font font-bold text-2xl">{{ place.nom }}</h2>
                    <p>Ouverture : {{ place.heure_ouverture }} | Fermeture : {{ place.heure_fermeture }}</p>
                    {% if place.jours_fermeture_litteral | length %}
                    <p>Fermé le {{ place.jours_fermeture_litteral | join(", ") }}</p>
                    {% else %}
                    <p>Ouvert tous les jours</p>
                    {% endif %}
                </div>
                {% endif %}
                <div class="overflow-x-auto">
                    {% include "includes/form-banner-success.njk" %}
                    <table class="w-full bg-white border-collapse whitespace-nowrap">
                        <thead>
                            <tr class="bg-gray-200">
                                <td class="font-bold px-4 py-3 text-left">#</td>
                                <td class="font-bold px-4 py-3 text-left">Date de visite</td>
                                <td class="font-bold px-4 py-3 text-left">Lieu</td>
                                {% for business in list_business_sector %}
                                    <td class="font-bold px-4 py-3 text-left border-solid">{{ business.name | striptags(true) | escape | nl2br }}</td>
                                {% endfor %}
                                <td class="font-bold px-4 py-3 text-left"></td>
                            </tr>
                        </thead>
                        <tbody>
                            {% for visit in visitors_list %}
                                <tr class="even:bg-green-numixs/50 group hover:bg-slate-200" data-member-row>
                                    <td class="group-hover:bg-slate-200 bg-gray-100 group-even:bg-green-numixs/50 px-4 py-3 text-left" data-label="Numéro" data-row-key="{{ business.value }}">{{ loop.index }}</td>
                                    <td class="group-hover:bg-slate-200 bg-gray-100 group-even:bg-green-numixs/50 px-4 py-3 text-left" data-label="Date de passage" data-row-key="Date de passage">
                                        <time datetime="{{ visit['date_passage'] }}">
                                            {{ visit["date_passage"]|date("dd/LL/yyyy à HH:mm") }}
                                        </time>
                                    </td>
                                    <td class="group-hover:bg-slate-200 bg-gray-100 group-even:bg-green-numixs/50 px-4 py-3 text-left" data-label="Numéro" data-row-key="{{ business.value }}">{{ visit['place.nom'] }}</td>
                                    {% for business in list_business_sector %}
                                        <td class="group-hover:bg-slate-200 bg-gray-100 group-even:bg-green-numixs/50 px-4 py-3 text-left {{ "font-bold" if visit[business.value] == "oui" else "" }}" data-label="{{ business.name }}" data-row-key="{{ business.value }}">{{ visit[business.value] }}</td>
                                    {% endfor %}
                                    <td class="group-hover:bg-slate-200 bg-gray-100 group-even:bg-green-numixs/50 px-4 py-3">
                                        <button type="button" class="align-middle hocus:opacity-80" title="Voir détails" commandfor="detail-visit" command="show-modal" data-visit-data='{{ visit | json }}'>
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                                                <path fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12Zm11.378-3.917c-.89-.777-2.366-.777-3.255 0a.75.75 0 0 1-.988-1.129c1.454-1.272 3.776-1.272 5.23 0 1.513 1.324 1.513 3.518 0 4.842a3.75 3.75 0 0 1-.837.552c-.676.328-1.028.774-1.028 1.152v.75a.75.75 0 0 1-1.5 0v-.75c0-1.279 1.06-2.107 1.875-2.502.182-.088.351-.199.503-.331.83-.727.83-1.857 0-2.584ZM12 18a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Z" clip-rule="evenodd" />
                                            </svg>
                                        </button>
                                    </td>
                                </tr>
                            {% else %}
                                <tr class="">
                                    <td colspan="{{ (list_business_sector | length) + 4 }}" class="px-4 py-3 text-center">
                                        {% if is_day_closed %}
                                        Fermé le <time datetime="{{ current_date }}">{{ current_date|date("dd/LL/yyyy") }}</time>
                                        {% else %}
                                        Pas de visites le <time datetime="{{ current_date }}">{{ current_date|date("dd/LL/yyyy") }}</time>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div popover id="download-links" class="bg-slate-50 shadow-2xl rounded-md p-1 backdrop:bg-black-numixs/35 -translate-1/2 left-1/2 top-1/2 w-11/12">
        <ul class="flex flex-col gap-1">
            <li>
                <a href="/telecharger?jour={{ current_date|date("yyyy-MM-dd") }}" download class="w-full align-center inline-flex gap-2 px-3.5 py-2.5 rounded-xl text-white bg-black-numixs hocus:bg-black">
                    {% include "includes/icons/download-fill-icon.svg" %}
                    Télécharger les données du {{ current_date|date("dd/MM/yyyy") }} (.csv)
                </a>
            </li>
            <li>
                <a href="/telecharger?semaine={{ current_date|date("yyyy-MM-dd") }}" download class="w-full align-center inline-flex whitespace-nowrap flex-row gap-2 px-3.5 py-2.5 rounded-xl text-black hocus:bg-slate-300">
                    {% include "includes/icons/download-fill-icon.svg" %}
                    Télécharger toutes les données de la semaine (.csv)
                </a>
            </li>
            <li>
                <a href="/telecharger?mois={{ current_date|date("yyyy-MM") }}" download class="w-full align-center inline-flex whitespace-nowrap flex-row gap-2 px-3.5 py-2.5 rounded-xl text-black hocus:bg-slate-300">
                    {% include "includes/icons/download-fill-icon.svg" %}
                    Télécharger toutes les données de {{ current_date|date("MMMM yyyy") }} (.csv)
                </a>
            </li>
            <li>
                <a href="/telecharger?annee={{ current_date|date("yyyy") }}" download class="w-full align-center inline-flex whitespace-nowrap flex-row gap-2 px-3.5 py-2.5 rounded-xl text-black hocus:bg-slate-300">
                    {% include "includes/icons/download-fill-icon.svg" %}
                    Télécharger toutes les données de l'année {{ current_date|date("yyyy") }} (.csv)
                </a>
            </li>
        </ul>
    </div>

    <dialog id="detail-visit" closedby="any" class="bg-black-numixs shadow-2xl rounded-md p-3 text-white-numixs backdrop:bg-black-numixs/35 -translate-1/2 left-1/2 top-1/2 w-5/12 max-w-2xl border border-solid border-green-numixs">
        <header class="flex flex-row justify-between items-start">
            <div>
                <p class="title-font text-4xl">Visite n°<span data-visit-number></span></p>
                <p class="text-sm">
                    <time datetime="">14/11/2025 à 10:47:56</time>
                </p>
                <p class="text-sm" data-place-name></p>
            </div>
            <button type="button" command="close" commandfor="detail-visit" class="text-white-numixs hocus:text-green-numixs cursor-pointer">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12"></path>
                </svg>
            </button>
        </header>

        <hr class="pb-1 mt-1 border-green-numixs">
        <p class="text-xl">Groupe(s)</p>
        <ul class="list-disc list-inside">
            <li>En réinsertion pro</li>
            <li>Entreprise Externe</li>
        </ul>
    </dialog>
{% endblock %}
