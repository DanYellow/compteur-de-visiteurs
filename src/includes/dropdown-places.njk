<label for="place-dropdown" class="text-sm">Lieu</label>
<select id="place-dropdown" class="py-1">
    <option value="tous">Tous</option>
    {% for place in places_list %}
    <option {{ "selected" if place_selected == place.slug else "" }} value="{{ place.slug }}">{{ place.nom }}</option>
    {% endfor %}
</select>
